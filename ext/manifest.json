{
  "manifest_version": 2,
  "name": "Emo - add some emoji emoting to your life",
  "description": "Translates English text into emojis (aka emoticons, aka smileys)",
  "version": "0.7",
  "permissions": [
    "contextMenus"
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png"
  },
  "browser_action": {
    "default_icon": "icon48.png",
    "default_popup": "popup.html"
  },
  "background": {
    "persistent": true,
    "scripts": [ "background.js" ]
  }
}
